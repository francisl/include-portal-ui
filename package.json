{
  "name": "include-portal-ui",
  "version": "1.0.0",
  "private": true,
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint&fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint $(git diff-index --name-only --diff-filter=d HEAD | grep \"[\\.js|\\.jsx|\\.tsx|\\.ts]$\" | xargs)",
    "lint:fix": "eslint --fix --rule 'no-console: 2'",
    "theme:antd": "lessc --js ./src/style/themes/include/antd-include-theme.less ./src/style/themes/include/dist/antd.css",
    "theme:scss": "npm run theme:clean; less2sass ./src/style/themes/include/colors.less; mv ./src/style/themes/include/colors.scss ./src/style/themes/include/dist/_colors.scss",
    "theme:clean": "find ./src/style/themes/include/dist/* -type f -exec rm {} \\; || true",
    "theme": "npm run theme:scss && npm run theme:antd",
    "eject": "react-scripts eject"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/include-dcc/include-portal-ui.git"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@apollo/client": "^3.4.17",
    "@dnd-kit/core": "^4.0.3",
    "@dnd-kit/sortable": "^5.1.0",
    "@ferlab/style": "^1.13.1",
    "@ferlab/ui": "^2.6.0",
    "@react-keycloak/web": "^3.4.0",
    "@reduxjs/toolkit": "^1.6.2",
    "@testing-library/jest-dom": "^5.15.0",
    "antd": "^4.16.13",
    "axios": "^0.24.0",
    "classnames": "^2.3.1",
    "html-react-parser": "^1.4.4",
    "jwt-decode": "^3.1.2",
    "keycloak-js": "^15.0.2",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl-universal": "^2.4.8",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/md5": "^2.3.1",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.2",
    "@types/redux-logger": "^3.0.9",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "less2sass": "^1.0.3",
    "node-sass": "^6.0.1",
    "typescript": "^4.4.4",
    "web-vitals": "^2.1.2"
  }
}
